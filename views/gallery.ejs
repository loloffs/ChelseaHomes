<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Styles -->
    <link rel="icon" href="favicon.ico" type="image/x-icon"> 
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon"> 
    <link rel="stylesheet" href="/main.css" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>


    <title>Chelsea Homes Kelowna</title>
  </head>
  <body>
    <%- include('partials/_header') %>

    <div class="row">
      <div class="column">
        <img class="individualImg" alt="Snow" src="/img/BalzerHouse.jpeg">
        <img class="individualImg" alt="Snow" src="/img/balzerHomeFull.jpeg">
      </div>
      <div class="column">
        <img class="individualImg" alt="Snow" src="/img/balzerHomeFrontJPG.jpeg">
      </div>
      <div class="column">
        <img class="individualImg" alt="Snow" src="/img/lakevale.jpg">
      </div>
     
    </div>

    <!-- <div id="allGalleryImages">
      <img class="galleryImage" src="/img/lakevale.jpg">
    </div> -->

    <div id="myModal" class="modal">

      <!-- The Close Button -->
      <span class="close">&times;</span>
    
      <!-- Modal Content (The Image) -->
      <img class="modal-content" id="img01">
    
      <!-- Modal Caption (Image Text) -->
      <div id="caption"></div>
    </div>

    <%- include('partials/_footer') %>


    <script>

      // const bigger = function(){
      //   $('.individualImg').css("width","150%", ); // incorrect class on line 25
      //   // $('.testing').css("height","70%");
      // }

      // Get the modal
      var modal = document.getElementsById("myModal");

      // Get the image and insert it inside the modal - use its "alt" text as a caption
      var img = document.getElementsByClassName("individualImg");
      console.log("IMG: ", img)
      var modalImg = document.getElementById("img01");
      var captionText = document.getElementById("caption");
      img.onclick = function(){
        modal.style.display = "block";
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
      }

      // Get the <span> element that closes the modal
      var span = document.getElementsByClassName("close")[0];

      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
      }


      // probably need to use toggleClass...
      // const bigger = function() {
      //   $('.individualImg').toggleClass('individualImg enlargedImg');
      // }


    </script>


  </body>
</html>